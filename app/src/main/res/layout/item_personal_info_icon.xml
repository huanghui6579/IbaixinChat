<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/item_veritcal_padding"
    android:layout_marginTop="@dimen/activity_vertical_margin"
    android:background="@drawable/item_setting_bg_selector"
    android:clickable="true" >
    
    <FrameLayout
        android:id="@+id/icon_layout"
        android:layout_width="@dimen/setting_item_icon_size"
        android:layout_height="@dimen/setting_item_icon_size"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" >
	    <ImageView 
	        android:id="@id/iv_icon"
	        android:layout_width="@dimen/setting_item_icon_size"
	        android:layout_height="@dimen/setting_item_icon_size"
	        android:contentDescription="@null"
	        android:background="@android:color/white"
	        android:src="@drawable/contact_head_icon_default"/>
	    
	    <View 
	        android:id="@+id/icon_bg_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="true"
            android:background="@drawable/common_list_selector"/>
    </FrameLayout>
    
    <TextView 
        android:id="@id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical|start"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        style="@style/CommonListItemTitleStyle"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/icon_layout"
        android:layout_toStartOf="@id/icon_layout"
        android:layout_marginRight="@dimen/item_veritcal_padding"
        android:layout_marginEnd="@dimen/item_veritcal_padding"
        android:singleLine="true"/>
	
</RelativeLayout>
