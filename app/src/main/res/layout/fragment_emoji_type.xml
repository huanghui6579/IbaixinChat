<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/net.ibaixin.chat"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- <net.ibaixin.chat.view.EmojiPageIndicator
        android:id="@+id/page_indicator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/> -->
        
    <net.ibaixin.chat.view.PagerSlidingTabStrip
        android:id="@+id/page_indicator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:pstsDividerColor="@android:color/white"
        app:pstsUnderlineHeight="2dp"
        app:pstsIndicatorHeight="6dp"
        app:pstsUnderlineColor="@android:color/white"
        app:pstsIndicatorColor="@android:color/white"/>
    
    <android.support.v4.view.ViewPager
        android:id="@id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

</LinearLayout>
