<?xml version="1.0" encoding="utf-8"?>
<!-- net.ibaixin.chat.view.FitSystemWindow -->
<net.ibaixin.chat.view.FitSystemWindowLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <include layout="@layout/com_toolbar"/>
    <ScrollView 
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:orientation="vertical">
		    <EditText 
		        android:id="@+id/et_content"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:gravity="left|top"/>
		    
		    <Button 
		        android:id="@+id/btn_choice_file"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:layout_marginTop="10dp"
		        android:text="选择文件"/>
		    
		    <EditText 
		        android:id="@+id/et_username"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:gravity="left|top"/>
		    
		    <Button 
		        android:id="@+id/btn_upload"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:layout_marginTop="10dp"
		        android:text="上传"/>
		    
		    <TextView 
		        android:id="@+id/tv_progress"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:layout_marginTop="10dp"
		        android:gravity="center"
		        android:textSize="20sp"/>
		    
		    <Button 
		        android:id="@+id/btn_download"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:layout_marginTop="10dp"
		        android:text="下载"/>
		    
		    <TextView 
		        android:id="@+id/tv_path"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:textSize="20sp"
		        android:layout_marginTop="10dp"/>
		    
		    <Button 
		        android:id="@+id/btn_request"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:layout_marginTop="10dp"
		        android:text="数据请求"/>
		    
		    <TextView 
		        android:id="@+id/tv_result"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:layout_marginTop="10dp"/>
		    <!-- <ListView 
		        android:id="@id/lv_data"
		        style="@style/CommonListViewStyle"
		        android:layout_above="@id/et_content" /> -->
		    
		</LinearLayout>
    </ScrollView>
</net.ibaixin.chat.view.FitSystemWindowLinearLayout>


