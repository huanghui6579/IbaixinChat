<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/chat_record_dialog_background"
    android:gravity="center"
	android:layout_gravity="center"    
    android:orientation="vertical"
    android:paddingLeft="@dimen/chat_record_dialog_padding_horizonal"
    android:paddingRight="@dimen/chat_record_dialog_padding_horizonal"
    android:paddingTop="@dimen/chat_record_dialog_padding_vertical"
    android:paddingBottom="@dimen/chat_record_dialog_padding_vertical" >
    
    <ImageView 
        android:id="@id/iv_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@null"
        android:src="@drawable/record_animate_01"/>
    
    <TextView 
        android:id="@id/tv_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:textSize="@dimen/font_size_m"
        android:layout_marginTop="@dimen/activity_vertical_margin"/>

</LinearLayout>
